<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="gpaneWindowHome" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.homeauto.controller.HomeController">
    <Button fx:id="btnCreate" onAction="#goToCreate" prefWidth="200" text="Grundriss neu erstellen" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button fx:id="btnOpenPlan" onAction="#openPlan" prefWidth="200" text="Grundriss öffnen/bearbeiten" GridPane.rowIndex="2" />
   <Button fx:id="btnExit" mnemonicParsing="false" onAction="#exitProgram" text="Beenden" GridPane.rowIndex="5" />
   <ChoiceBox fx:id="choiceboxComm" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Button fx:id="btnCheckChoice" mnemonicParsing="false" onAction="#checkPortChoice" text="Prüfen" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <ImageView fx:id="imgPortChoice" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="3">
      <GridPane.margin>
         <Insets left="60.0" />
      </GridPane.margin>
   </ImageView>
    <columnConstraints>
        <ColumnConstraints />
      <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="100.0" left="100.0" right="50.0" top="100.0" />
    </padding>
</GridPane>
